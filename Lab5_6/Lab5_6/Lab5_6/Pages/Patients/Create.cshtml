@page
@using Lab5_6.Entities.Enums;
@model Lab5_6.Pages.Patients.CreateModel

@{
    ViewData["Title"] = "Patients | Create";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Patient.PatientOib" class="control-label"></label>
                <input asp-for="Patient.PatientOib" class="form-control" />
                <span asp-validation-for="Patient.PatientOib" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Patient.PatientMbo" class="control-label"></label>
                <input asp-for="Patient.PatientMbo" class="form-control" />
                <span asp-validation-for="Patient.PatientMbo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Patient.FirstName" class="control-label"></label>
                <input asp-for="Patient.FirstName" class="form-control" />
                <span asp-validation-for="Patient.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Patient.LastName" class="control-label"></label>
                <input asp-for="Patient.LastName" class="form-control" />
                <span asp-validation-for="Patient.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Patient.DiagnosisId" class="control-label"></label>
                <select asp-for="Patient.DiagnosisId" class ="form-control" asp-items="ViewBag.DiagnosisId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Patient.DateOfBirth" class="control-label"></label>
                <input asp-for="Patient.DateOfBirth" class="form-control" max="@DateTime.Now.ToString("yyyy-MM-dd")"/>
                <span asp-validation-for="Patient.DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Patient.DateOfAdmittance" class="control-label"></label>
                <input asp-for="Patient.DateOfAdmittance" class="form-control" max="@DateTime.Now.ToString("yyyy-MM-dd")"/>
                <span asp-validation-for="Patient.DateOfAdmittance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Patient.DateOfDischarge" class="control-label"></label>
                <input asp-for="Patient.DateOfDischarge" class="form-control" max="@DateTime.Now.ToString("yyyy-MM-dd")"/>
                <span asp-validation-for="Patient.DateOfDischarge" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Patient.PatientGender" class="control-label"></label>
                <select asp-for="Patient.PatientGender" class="form-control" asp-items="@(Html.GetEnumSelectList<Gender>())"></select>
                <span asp-validation-for="Patient.PatientGender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Patient.PatientInsurance" class="control-label"></label>
                <select asp-for="Patient.PatientInsurance" class="form-control" asp-items="@(Html.GetEnumSelectList<Insurance>())"></select>
                <span asp-validation-for="Patient.PatientInsurance" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Patient.IsDischarged" /> @Html.DisplayNameFor(model => model.Patient.IsDischarged)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="/">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
